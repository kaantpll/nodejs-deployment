{
  "compilerOptions": {
    "target": "ES2020",           
    "module": "CommonJS",         
    "strict": true,                
    "esModuleInterop": true,      
    "skipLibCheck": true,         
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./dist",          
    "rootDir": "./src",            
    "strictNullChecks": true,      
    "sourceMap": true,            
    "moduleResolution": "node",  
    "declaration": true,         
    "removeComments": true,       
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,     
    "esModuleInterop": true,      
    "baseUrl": "./",              
    "paths": {                     
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": [
    "src/**/*.ts"                 /* Derlenmeye dahil edilecek dosya ve klasörleri belirt */
  ],
  "exclude": [
    "node_modules"                /* Derlenme dışı tutulacak dosya ve klasörleri belirt */
  ]
}
